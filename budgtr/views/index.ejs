    <title>Budgtr</title>
</head>
<body>
    <div class="container">
            <h1>Budgtr ALL</h1>  
    </div>
    <table>
            <% for(let i =0; i < budget.length; i++){ %>
        <tr>
            <td><%= budget[i].date %></td>
            <td><a href="/budget/<%=i%>">
                <%= budget[i].name %>
            </a>
            </td>
            <td><%= budget[i].amount %></td>
            <% } %>
        </tr>
    </table>
    <a href="/budget/new"><button>Add New</button></a>
    
    
</body>
</html>